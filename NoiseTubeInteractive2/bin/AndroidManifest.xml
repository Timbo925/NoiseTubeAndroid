<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noisetubeinteractive2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.noisetube.main.ServerConnection"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.noisetube.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.noisetube.main.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.noisetube.main.MainActivity" >
        </activity>
        <activity
            android:name="com.noisetube.main.DisplayProfile"
            android:label="@string/title_activity_display_profile"
            android:parentActivityName="com.noisetube.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.noisetubeinteractive2.MainActivity" />
        </activity>
        <activity
            android:name="com.noisetube.main.NewProfileActivity"
            android:label="@string/title_activity_new_profile"
            android:parentActivityName="com.noisetube.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.noisetubeinteractive2.MainActivity" />
        </activity>

        <service
            android:name="com.noisetube.main.SoundMeasurementService"
            android:exported="false" />

        <activity
            android:name="com.example.noisetubeinteractive2.PostResult"
            android:label="@string/title_activity_post_result"
            android:parentActivityName="com.noisetube.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.noisetube.main.MainActivity" />
        </activity>
        <activity
            android:name="com.example.noisetubeinteractive2.LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:parentActivityName="com.example.noisetubeinteractive2.PostResult" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.noisetubeinteractive2.PostResult" />
        </activity>
        <activity
            android:name="com.example.noisetubeinteractive2.BadgesActivity"
            android:label="@string/title_activity_badges" >
        </activity>
    </application>

</manifest>